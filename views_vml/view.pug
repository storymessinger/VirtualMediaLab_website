doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/student') Visual Media lab Members
        ul
            each topic in topics
                li
                    a(href='/student/'+topic.id)=topic.name
        article
            if topic
                h2= topic.name
                ul
                    li
                        p= topic.description
                    li
                        p= 'interested at '+topic.interest
                    li
                        p= 'email is ' +topic.email
            else
                h2 Welcome
                | This is Visual Media lab 
        ul
            li
                a(href='/student/add') add
            if topic
                li
                    a(href='/student/'+topic.id+'/edit') edit
                li
                    a(href='/student/'+topic.id+'/delete') delete
