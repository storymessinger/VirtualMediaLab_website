doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/student') Visual Media lab Members
        ul
            each topic in topics
                li
                    a(href='/student/'+topic.id)=topic.name
        article
            form(action='/student/'+topic.id+'/edit' method='post')
                p
                    input(type='text' name='name' placeholder='name' value=topic.name)
                p
                    textarea(type='text' name='description')
                        =topic.description
                p
                    input(type='text' name='interest' placeholder='interest' value=topic.interest)
                p
                    input(type='text' name='email' placeholder='email' value=topic.email)
                p
                    input(type='submit')
        ul
            li
                a(href='/student/add') add
            if topic
                li
                    a(href='/student/'+topic.id+'/edit') edit
