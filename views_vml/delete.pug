doctype html
html
    head
        meta(charset='utf-8') 
    body
        h1 
            a(href='/student') Visual Media lab Members
        ul
            each topic in topics
                li
                    a(href='/student/'+topic.id)=topic.name
        article
            h1= 'Delete?' +topic.name
            form(action='/student/'+(topic.id)+'/delete' method='post')
                p
                    input(type='submit' value='YES')
            a(href='/student/'+topic.id) no 

