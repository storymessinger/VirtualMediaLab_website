doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/topic') Visual Media lab Members
        ul
            each topic in topics
                li
                    a(href='/topic/'+topic.id)=topic.title
        article
            form(action='/topic/'+topic.id+'/edit' method='post')
                p
                    input(type='text' name='title' placeholder='title' value=topic.title)
                p
                    textarea(type='text' name='description')
                        =topic.description
                p
                    input(type='text' name='author' placeholder='title' value=topic.author)
                p
                    input(type='submit')
        ul
            li
                a(href='/topic/add') add
            if topic
                li
                    a(href='/topic/'+topic.id+'/edit') edit
