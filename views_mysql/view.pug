doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/topic') Visual Media lab Members
        ul
            each topic in topics
                li
                    a(href='/topic/'+topic.id)=topic.title
        article
            if topic
                h2= topic.title
                p= topic.description
                div= 'by '+topic.author
            else
                h2 Welcome
                | This is Visual Media lab 
        ul
            li
                a(href='/topic/add') add
            if topic
                li
                    a(href='/topic/'+topic.id+'/edit') edit
                li
                    a(href='/topic/'+topic.id+'/delete') delete
